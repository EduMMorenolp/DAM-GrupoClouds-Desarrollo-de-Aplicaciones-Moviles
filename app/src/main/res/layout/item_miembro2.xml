<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_edittext_bg"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="6dp"
    android:paddingHorizontal="20dp"
    android:paddingVertical="16dp">

    <!-- Icono de persona como reemplazo de la foto -->
    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_person"
        android:background="@drawable/circle_background"
        android:backgroundTint="@color/button_A_background"
        android:padding="10dp"
        app:tint="@color/button_A_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TextView para el nombre del miembro -->
    <TextView
        android:id="@+id/tv_nombre_miembro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/iv_profile"
        app:layout_constraintEnd_toStartOf="@id/tv_tipo_miembro"
        app:layout_constraintTop_toTopOf="@id/iv_profile"
        tools:text="Eduardo Moreno" />

    <!-- TextView para mostrar si es Socio o No-Socio -->
    <TextView
        android:id="@+id/tv_tipo_miembro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext_bg"
        android:backgroundTint="@color/button_A_background"
        android:textColor="@color/button_A_text"
        android:textSize="12sp"
        android:textStyle="bold"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="SOCIO" />

    <!-- TextView para el ID/DNI del miembro -->
    <TextView
        android:id="@+id/tv_id_miembro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:textColor="@color/smalltext_color"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/iv_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_nombre_miembro"
        tools:text="DNI: 12345678Z" />

    <!-- TextView para fecha de nacimiento -->
    <TextView
        android:id="@+id/tv_fecha_nacimiento"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/smalltext_color"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/iv_profile"
        app:layout_constraintEnd_toStartOf="@id/tv_estado_info"
        app:layout_constraintTop_toBottomOf="@id/tv_id_miembro"
        tools:text="Nacido: 1990-01-01" />

    <!-- TextView para informaciÃ³n adicional (cuota, carnet, etc.) -->
    <TextView
        android:id="@+id/tv_estado_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:textColor="@color/smalltext_color"
        android:textSize="11sp"
        android:background="@drawable/rounded_edittext_bg"
        android:backgroundTint="@color/background_color"
        android:paddingHorizontal="6dp"
        android:paddingVertical="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tipo_miembro"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Cuota: 2025-12-31" />

</androidx.constraintlayout.widget.ConstraintLayout>
