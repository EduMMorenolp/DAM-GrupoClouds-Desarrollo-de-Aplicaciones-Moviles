<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_bg"
    android:backgroundTint="@color/input_background"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_nombre_completo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_cuota_hasta_label"
        android:layout_marginEnd="16dp"
        tools:text="Ethan Carter" />

    <TextView
        android:id="@+id/tv_dni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/smalltext_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_nombre_completo"
        tools:text="12345678X" />

    <TextView
        android:id="@+id/tv_cuota_hasta_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VenciÃ³ el:"
        android:textColor="@color/smalltext_color"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_fecha_vencimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/warning_color"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cuota_hasta_label"
        tools:text="2024-05-10" />

</androidx.constraintlayout.widget.ConstraintLayout>
