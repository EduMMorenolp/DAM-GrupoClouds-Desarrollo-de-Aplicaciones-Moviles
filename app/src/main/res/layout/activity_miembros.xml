<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"

    tools:context=".MiembrosActivity">

    <!-- Barra de herramientas superior (AppBar) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#252525"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Miembros"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white" />

    <!-- Icono de Añadir (+) en la Toolbar -->
    <ImageView
        android:id="@+id/iv_add_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="@id/toolbar"
        app:layout_constraintTop_toTopOf="@id/toolbar"
        app:tint="@android:color/white" />

    <!-- Campo de Búsqueda -->
    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edittext_bg"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="12dp"
        android:hint="Search"
        android:padding="12dp"
        android:textColor="@android:color/white"
        android:textColorHint="#A0A0A0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <!-- Botones de Filtro (Socios / No-Socios) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_socios"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2E5A2E"
        android:text="Socios"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_search" />

    <!-- Lista para mostrar los miembros -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_no_socios"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:backgroundTint="#2E5A2E"
        android:text="No-Socios"
        android:textAllCaps="false"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_socios"
        app:layout_constraintStart_toEndOf="@id/btn_socios"
        app:layout_constraintTop_toTopOf="@id/btn_socios"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_miembros"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/bottom_nav_component"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_socios"
        tools:itemCount="5" />

    <!-- Botón Flotante de Acción (FAB) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_upload"
        android:visibility="visible"
        app:backgroundTint="#32CD32"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_component"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white" />

    <include
        layout="@layout/component_botton_nav"
        android:id="@+id/bottom_nav_component"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
