<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"

    tools:context=".ActividadesActivity">


    <!-- Barra de herramientas superior (AppBar) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/TvactividadesTitle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:title="Actividades"
        app:titleCentered="true"
        app:titleTextColor="@android:color/white" />

    <!-- Icono de Añadir (+)-->
       <ImageView
           android:id="@+id/iv_add_actividades"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginEnd="16dp"
           android:contentDescription="@string/agregar_actividad"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="@+id/TvactividadesTitle"
           app:layout_constraintBottom_toBottomOf="@+id/TvactividadesTitle"
           android:src="@android:drawable/ic_input_add"
           app:tint="@android:color/white" />


    <!-- Lista -->
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/recyclerViewActividades"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_marginTop="32dp"
           android:layout_marginStart="16dp"
           android:layout_marginEnd="16dp"
           app:layout_constraintTop_toBottomOf="@+id/TvactividadesTitle"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintBottom_toTopOf="@+id/bottom_nav_component"
           tools:listitem="@layout/item_actividades" />

    <!-- Incluimos el componente de navegación inferior -->
    <include
        android:id="@+id/bottom_nav_component"
        layout="@layout/component_botton_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>
