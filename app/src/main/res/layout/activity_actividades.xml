<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"

    tools:context=".ActividadesActivity">


<!-- titulo -->
    <TextView
        android:id="@+id/TvactividadesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/actividades"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Icono de Añadir (+)-->
       <ImageView
           android:id="@+id/iv_add_actividades"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginEnd="16dp"
           android:contentDescription="@string/agregar_actividad"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="@+id/TvactividadesTitle"
           app:layout_constraintBottom_toBottomOf="@+id/TvactividadesTitle"
           android:src="@android:drawable/ic_input_add"
           app:tint="@android:color/white" />


    <!-- Busqueda -->
       <com.google.android.material.textfield.TextInputEditText


           android:id="@+id/search"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginStart="16dp"
           android:layout_marginTop="20dp"
           android:layout_marginEnd="16dp"

           android:background="@drawable/bg_search"
           android:textColorHint="@color/smalltext_color"
           android:hint="@string/search"
           android:inputType="text"
           android:paddingStart="12dp"
           android:paddingTop="12dp"
           android:paddingEnd="12dp"
           android:paddingBottom="12dp"

           android:drawableStart="?android:attr/actionModeWebSearchDrawable"
           android:drawablePadding="12dp"
           app:drawableTint="@color/smalltext_color"

           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/TvactividadesTitle"
           tools:ignore="VisualLintTextFieldSize" />


    <!-- Botones -->
    <!-- Botones: ahora en una cadena horizontal para que no se solapen y se adapten al ancho -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_tipoDeActividad"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/btn_verde"
        android:text="@string/tipoDeActividad"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_instructor"
        app:layout_constraintTop_toBottomOf="@id/search" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_instructor"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/btn_verde"
        android:text="@string/instructor"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toEndOf="@id/btn_tipoDeActividad"
        app:layout_constraintEnd_toStartOf="@+id/btn_diaDeLaSemana"
        app:layout_constraintTop_toBottomOf="@id/search" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_diaDeLaSemana"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/btn_verde"
        android:text="@string/diaDeLaSemana"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toEndOf="@id/btn_instructor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search" />

    <!-- Indicamos al Chain que distribuya el espacio entre los 3 botones -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/btn_tipoDeActividad"
        app:layout_constraintEnd_toEndOf="@id/btn_diaDeLaSemana"
        app:layout_constraintTop_toTopOf="@id/btn_tipoDeActividad"
        app:layout_constraintBottom_toBottomOf="@id/btn_tipoDeActividad"
        app:layout_constraintHorizontal_chainStyle="spread" />
    <!-- Lista -->
       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/recyclerViewActividades"
           android:layout_width="0dp"
           android:layout_height="0dp"
           android:layout_marginTop="16dp"
           app:layout_constraintTop_toBottomOf="@id/btn_instructor"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintBottom_toTopOf="@+id/bottom_nav_component"
           tools:listitem="@layout/item_actividades" />




    <!-- Incluimos el componente de navegación inferior -->
    <include
        android:id="@+id/bottom_nav_component"
        layout="@layout/component_botton_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>
